                </DataTrigger>
            </ControlTemplate.Triggers>
		</ControlTemplate>-->

        <ControlTemplate x:Key="ContentControlTemplate1" TargetType="{x:Type Control}">
            <Grid>
                <Image x:Name="MyImage" HorizontalAlignment="Left" Height="16" Source="Images/close.png" Stretch="Fill" VerticalAlignment="Top" Width="16" Margin="{Binding Path=Level,Converter={StaticResource marginConverter}}"/>
            </Grid>
            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=IsExpended}" Value="true">
                    <Setter TargetName="MyImage" Property="Source" Value="Images/open.png"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=IsExpendable}" Value="false">
                    <Setter TargetName="MyImage" Property="Visibility" Value="Hidden"/>
                </DataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>            
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<CheckBox x:Name="ExpendCheckBox" IsChecked="{Binding Path=IsExpended}" VerticalAlignment="Center" Content="{Binding}"/>-->
