        </Button>-->

        <!--<ContentControl x:Name="MyButton" MouseDown="MyButton_MouseDown" Focusable="False" Template="{DynamicResource ContentControlTemplate1}" />-->
        <Control x:Name="MyButton" MouseDown="MyButton_MouseDown" Focusable="False" Template="{DynamicResource ContentControlTemplate1}"/>

        <!--<ContentControl x:Name="MyComponent" DataContext="{Binding Path=Obj}" Grid.Column="1"/>-->

        <Grid x:Name="MyComponent" DataContext="{Binding Path=Obj}" Grid.Column="1"/>

    </Grid>
</UserControl>
