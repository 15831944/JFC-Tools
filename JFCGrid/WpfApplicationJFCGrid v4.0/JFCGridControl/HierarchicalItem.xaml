			<Grid>
                <Image x:Name="MyImage" HorizontalAlignment="Left" Height="16" Source="Images/close.png" Stretch="Fill" VerticalAlignment="Top" Width="16" Margin="{Binding Path=Level,Converter={StaticResource marginConverter}}"/>				
			</Grid>
			<ControlTemplate.Triggers>
				<DataTrigger Binding="{Binding Path=IsExpended}" Value="true">
					<Setter TargetName="MyImage" Property="Source" Value="Images/open.png"/>
				</DataTrigger>
